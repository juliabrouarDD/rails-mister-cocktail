<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path("#{@cocktail.name}.png") %>');">
  <div class="banner-content">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>

<div class="container">
  <ul class="recipe">
    <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %>
    </li>
    <% end %>
    <% @cocktail.ingredients.each do |ingredient| %>
    <li class="ingredents-list">
      <%= ingredient.name %>
    </li>
    <% end %>
  </ul>
  <br>
    <%= link_to 'Add an ingredient', new_cocktail_dose_path(@cocktail), class: "btn-medium" %>
  </br>
</div>
<div class="footer">
  <div class="footer-links">
    <a href="#"><i class="fab fa-github"></i></a>
    <a href="#"><i class="fab fa-instagram"></i></a>
    <a href="#"><i class="fab fa-facebook"></i></a>
    <a href="#"><i class="fab fa-twitter"></i></a>
    <a href="#"><i class="fab fa-linkedin"></i></a>
  </div>
</div>




<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path @cocktail.photo, height: 300, width: 400, crop: :fit %>')">
  <div class="banner-content">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>

<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col">Doses</th>
        <th scope="col">Ingredients</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @cocktail.doses.each do |dose| %>
      <tr>
        <th scope="row"></th>
        <td><%= dose.description %></td>
        <td><%= dose.ingredient.name %></td>
        <td>
          <%= link_to dose_path(dose), method: :delete do %>
          <i class="fas fa-trash-alt"></i>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Add an ingredient', new_cocktail_dose_path(@cocktail), class: "btn-medium" %>
</div>


